<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    app:cardUseCompatPadding="true"
    android:layout_margin="8dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/ic_action_wifi"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_text"

            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"><TextView
            android:id="@+id/networkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="@string/txt_network"

            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:padding="2dp"
            android:textSize="16sp" />

            <TextView
                android:id="@+id/networkPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_key"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="2dp"
                android:textIsSelectable="true"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/networkSecurity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:text="@string/txt_security_tag"

                android:textStyle="italic"
                android:fontFamily="sans-serif-light"
                android:padding="2dp"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>